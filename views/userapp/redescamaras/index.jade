    header#gtco-header.gtco-cover.gtco-cover-sm(role='banner', style='background-image: url(../../images/img_4.jpg)')
      .overlay
      .gtco-container
        .row
          .col-md-12.col-md-offset-0.text-left
            .row.row-mt-15em
              .col-md-7.mt-text.animate-box(data-animate-effect='fadeInUp')
                span.intro-text-small Administrador
                h1 Registrar Red de Camaras 

        
    .gtco-section
        .gtco-container
            .row                
               .col-md-8.col-md-offset-2.text-center.gtco-heading
                 
                h2 Redes de Camaras 
                    p
                   | 
            .row 
             for redcamara in redcamaras
              if redcamara.estatus == "Aprobado"
               .col-lg-4.col-md-4.col-sm-6
                 a(href='/userapp/solicitud/#{redcamara.id}')
                    .fh5co-project-item
                       .fh5co-text(Style="margin-top:20px")
                         h2 #{redcamara.calle} Colonia: #{redcamara.colonia}
                         p Número Max: #{redcamara.numeromax} Número Min:  #{redcamara.numeromin} CP #{redcamara.cp}
                         p Delegación o Municipio: #{redcamara.ciudad} Estado: #{redcamara.estado} 
                         p Estatus #{redcamara.estatus}
                         if redcamara.estatus == "Pendiente"
                            a.btn-default.btn-sm(href='/userapp/redescamaras/#{redcamara.id}/edit') Editar 
                            form(action="/userapp/redescamaras/#{redcamara.id}?_method=DELETE", method='post', class="link" )
                                input.btn-default.btn-sm(type="submit", value="Eliminar")
            .row          
             for redcamara in redcamaras
              if redcamara.estatus == "Pendiente"
                .col-lg-4.col-md-4.col-sm-6
                    .fh5co-project-item
                       .fh5co-text(Style="margin-top:20px")
                         h2 #{redcamara.calle} Colonia: #{redcamara.colonia}
                         p Número Max: #{redcamara.numeromax} Número Min:  #{redcamara.numeromin} CP #{redcamara.cp}
                         p Delegación o Municipio: #{redcamara.ciudad} Estado: #{redcamara.estado} 
                         p Estatus #{redcamara.estatus}
                         if redcamara.estatus == "Pendiente"
                            a.btn-default.btn-sm(href='/userapp/redescamaras/#{redcamara.id}/edit') Editar 
                            form(action="/userapp/redescamaras/#{redcamara.id}?_method=DELETE", method='post', class="link" )
                                input.btn-default.btn-sm(type="submit", value="Eliminar")
                    
                 
