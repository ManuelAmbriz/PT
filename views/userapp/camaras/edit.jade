    header#gtco-header.gtco-cover.gtco-cover-sm(role='banner', style='background-image: url(../../../images/img_4.jpg)')
      .overlay
      .gtco-container
        .row
          .col-md-12.col-md-offset-0.text-left
            .row.row-mt-15em
              .col-md-7.mt-text.animate-box(data-animate-effect='fadeInUp')
                span.intro-text-small Administrador
                h1 Editar Usuarios 
    .gtco-section.border-bottom
      .gtco-container
        .row
          .col-md-12
            .col-md-6.animate-box
              h3 Editor de Usuarios 
               form(action='/app/solicitud/#{user.id}?_method=PUT', method='post')
                  input(type="hidden", value="PUT" name="_method")
                  .row.form-group
                    .col-md-12
                      label(for='nombre') Nombre
                      input#Nombre.form-control(type='text', name='nombre', required='', value="#{user.nombre}")
                  .row.form-group
                    .col-md-12
                      label(for='apellidoma') Apellido Paterno
                      input#ApellidoPaterno.form-control(type='text', name='apellidopaterno', required='', value="#{user.apellidopaterno}")
                  .row.form-group
                    .col-md-12
                      label(for='apellidom') Apellido Materno
                      input#ApellidoMaterno.form-control(type='text', name='apellidomaterno', required='', value="#{user.apellidomaterno}")
                  .row.form-group
                    .col-md-12
                      label(for='correo') Correo Electrónioco
                      input#email.form-control(type='email', name='email', required='', value="#{user.correo}")
                  .row.form-group
                    .col-md-12
                      label(for='contraseña') Contraseña
                      input#email.form-control(type='password', name='contraseña', required='', value="#{user.contraseña}")
                  .row.form-group
                    .col-md-12
                      label(for='contraseñaconfirmada') Confirma tu Contraseña
                      input#email.form-control(type='password', name='password_confirmation', required='') 
                  .row.form-group
                    .col-md-12
                      input.btn.btn-primary(type='submit', required='', value='Registarte ')
            .col-md-5.col-md-push-1.animate-box
