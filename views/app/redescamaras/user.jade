    .gtco-section
        .gtco-container
            .row                
               .col-md-8.col-md-offset-2.text-center.gtco-heading
                h2 Usuarios Registrados en la Red 
                     
             .row
             for sc in solicitudunirse
               .col-lg-4.col-md-4.col-sm-6
                 .fh5co-project-item
                   .fh5co-text(Style="margin-top:20px")
                     h2 #{sc.user_id.nombre}  #{sc.user_id.apellidopaterno}
                     p Correo #{sc.user_id.correo}                     
                     form(action="/app/redescamarasd/#{sc.id}?_method=DELETE", method='post', class="link" )
                        input.btn-default.btn-sm(type="submit", value="Eliminar")
                    
                 
